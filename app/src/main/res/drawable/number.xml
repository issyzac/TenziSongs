<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>

        <shape
            android:dither="true"
            android:shape="oval" >
            <corners android:radius="0dp" />

            <solid android:color="#ffffffff" />

            <stroke
                android:width="3px"
                android:color="@color/card_border" />

            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />
        </shape>
    </item>

</layer-list>