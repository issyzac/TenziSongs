<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/amber_600"
        android:id="@+id/title_wrapper">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/inside_wrapper">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/song_number"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="72dp"
                android:text="150.."
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/song_title"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:text="CHAKUTUMAINI SINA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toRightOf="@id/song_number"/>


        </RelativeLayout>

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/english_title"
            android:textSize="12sp"
            android:layout_marginLeft="72dp"
            android:layout_below="@id/inside_wrapper"
            android:textColor="@color/card_white"
            android:text="My Hope Is Built On Nothing Less"
            android:gravity="center"/>

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/references"
            android:textSize="12sp"
            android:layout_marginLeft="72dp"
            android:layout_below="@id/english_title"
            android:text="N.S 288   C.H 251     S.S 902     R 420"
            android:textColor="@color/card_white"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:id="@+id/heading_shadow"
        android:layout_below="@id/title_wrapper"
        android:background="@drawable/trans"/>


    <ImageView

        android:layout_width="43dp"
        android:layout_height="43dp"
        android:id="@+id/play"
        android:layout_below="@id/title_wrapper"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="-25dp"
        android:src="@drawable/speacker"
        android:background="@drawable/number"/>


    <ImageView
        android:visibility="gone"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:id="@+id/played"
        android:scaleType="centerCrop"
        android:layout_below="@id/title_wrapper"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-25dp"
        android:src="@drawable/white_speacker"
        android:background="@drawable/white_number"/>



</RelativeLayout>