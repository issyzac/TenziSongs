<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <customViews.TouchFeedbackEnabledRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff2f2f2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card">

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:id="@+id/item_title_wrap"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/song_number"
                    android:text="15"
                    android:textStyle="bold"
                    android:textColor="#ff838383"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:background="@drawable/number"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/song_number"
                    android:layout_marginTop="8dp"
                    android:textColor="#006600"
                    android:id="@+id/item_title"
                    android:textSize="18sp"
                    android:text="Chakutumainin Sina"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.01dp"
                android:layout_below="@id/item_title_wrap"
                android:id="@+id/title_strip"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="#aeea00"/>

            <View
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_below="@id/title_strip"
                android:id="@+id/nothing"
                android:layout_alignParentLeft="true"/>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_toRightOf="@id/nothing"
                android:id="@+id/song_small_details"
                android:layout_below="@id/title_strip"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/music"
                    android:src="@drawable/ic_note"/>

                <TextView
                    android:layout_toRightOf="@id/music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/english_title"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:maxLines="3"
                    android:maxWidth="200dp"
                    android:textColor="@color/card_grid_text"
                    android:text="My Hope Is Built On Nothing Less \n I an in your dept forever \n make me yours now and forever\nand forever"

                    android:ellipsize="end" />


                </RelativeLayout>


            </RelativeLayout>

    </customViews.TouchFeedbackEnabledRelativeLayout>

    <customViews.TouchFeedbackEnabledRelativeLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="56dp"
        android:id="@+id/sound">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/play_sound"
            android:layout_centerInParent="true"
            android:src="@drawable/speacker"/>


    </customViews.TouchFeedbackEnabledRelativeLayout>

</RelativeLayout>