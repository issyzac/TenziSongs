<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="TranslucentTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="TranslucentActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@null</item>
        <item name="android:icon">@null</item>
    </style>


    <style name="Theme.MyAppTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/Theme.MyAppTheme.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:actionMenuTextColor">#fff</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_back</item>
    </style>

    <!-- Styles -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow</item>
    </style>


    <style name="Theme.MyAppTheme.ActionBar" parent="android:Widget.ActionBar">
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:background">@color/amber_600</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">18dp</item>
    </style>


</resources>
